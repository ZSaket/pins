<% include ./partials/header.ejs %>
  <div></div>
  <div class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1559854034-927055a85426?q=80&w=2048&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-no-repeat bg-center bg-cover flex items-center justify-center">
    <div class = "w-[25vw] bg-zinc-100 px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-10 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create An Account</h1>
      <form action="/register" method="post">
        <input class="border-2 block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full name">
        <input class="border-2 block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="border-2 block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="border-2 block mt-2 w-full px-3 py-2" type="text" name="password" placeholder="password">
        <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center" >By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Notice at collection;</p>
      </form>
      <a class="inline-block mt-7 font-semibold text-zinc-700 text-center w-full" href="/">Login existing Account</a>
    </div>
  </div>
